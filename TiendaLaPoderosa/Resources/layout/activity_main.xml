<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
android:layout_width="match_parent"
android:layout_height="wrap_content">
        <TableLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns = "*"
            android:stretchColumns = "*"
            android:id="@+id/tableLayout1"
            tools:ignore="XmlErrors,XmlErrors,XmlErrors">
            <TableRow
                android:layout_height = "wrap_content"
                android:layout_width = "wrap_content"
                android:id="@+id/tableRow1">
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:background="@android:color/holo_red_light"
                    android:minHeight="25px"
                    android:text="@string/btn1"
                    android:id="@+id/btnInicio"
                    android:layout_weight ="1"
 />
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:text="@string/btn3"
                    android:id="@+id/btnMision"
                    android:background="@android:color/holo_orange_dark"
                    android:layout_weight ="2"
 />
            </TableRow>
            <TableRow
                android:layout_height = "wrap_content"
                android:layout_width = "fill_parent"
                android:gravity="right"
                android:id="@+id/tableRow2">
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:text="@string/btn2"
                    android:id="@+id/btnHistoria"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_span="1"
 />

            </TableRow>
            <TableRow
                android:layout_height = "wrap_content"
                android:layout_width = "fill_parent"
                android:id="@+id/tableRow3">
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:background="@android:color/holo_orange_dark"
                    android:minHeight="25px"
                    android:text="@string/btn5"
                    android:id="@+id/btnCategorias"
                    android:layout_weight ="1"/>
            </TableRow>
            <TableRow
                android:layout_height = "wrap_content"
                android:layout_width = "fill_parent"
                android:id="@+id/tableRow4">
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:text="@string/btn6"
                    android:id="@+id/btnMarcas"
                    android:background="@android:color/background_dark"
                    android:layout_weight ="1"
 />
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:background="@android:color/holo_green_dark"
                    android:minHeight="25px"
                    android:text="@string/btn4"
                    android:id="@+id/btnSucursales"
                    android:layout_weight ="1"
 />

            </TableRow>

            <TableRow
                android:layout_height = "wrap_content"
                android:layout_width = "fill_parent"
                android:gravity="left"
                android:id="@+id/tableRow5">
                <Button
                    style="@style/BtnMenuMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:text="@string/btn7"
                    android:id="@+id/btnRecetas"
                    android:background="@android:color/holo_blue_dark"
                    android:layout_span="1"
 />
            </TableRow>
        </TableLayout>
</ScrollView>
</RelativeLayout>